<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/main.js"></script>
</head>
<body>

          <nav class="navbar navbar-default navbar-fixed-top">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                  <a href="@Url.Action("Index", "Home")" class="navbar-brand"></a>
                  <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
              </div>
              <!-- Collection of nav links and other content for toggling -->
              <div id="navbarCollapse" class="collapse navbar-collapse" style="margin-top:8px">
                  <ul class="nav navbar-nav">
                      <li id="home"><a href="/">Home</a></li>
                      <li id="service"><a href="/Service">Service</a></li>
                      <li id="technology"><a href="/Technology">Technology</a></li>
                      <li id="company"><a href="/Company">Contact Us</a></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                      <li><a href="http://member.yjpackaging.com">Login</a></li>
                  </ul>
              </div>
          </nav>
    <div class="container">
              @RenderBody()
    </div>


   <footer class="footer" style="text-align:center">
            <div style="width:100%;">
                <img src="~/Content/images/logosmall.png" />&nbsp;&nbsp;&nbsp;

&copy; @DateTime.Now.Year <b>Y.J. Packaging</b> 201 Gates Road  unit# F Little Ferry, NJ  07643 :: info@yjpackaging.com </div>
@*             <div style="background-color:#0070c0;width:100%; text-align:center; color:white"></div>*@
@*        <p class="text-muted">Y.J. Packaging & Delivery Inc.</p>*@
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
